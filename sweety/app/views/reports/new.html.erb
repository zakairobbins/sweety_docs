<h1>What report would you like to see?</h1>
<%= form_tag('/reports', :method => 'post', :class => "form-inline") do %>
	<div class="form-group">
	<%= label_tag(:date, "Select a date") %>
	<%= date_field(:date, :end_date, {class: "form-control"}) %>
	</div>
	<div class="form-group">
	<%= label_tag(:time_range, "Select a time range for your readings") %>
	<%= select_tag(:time_range, options_for_select([['Daily', 1], ['Month to date', 2], ['Past month', 3]]), class: "form-control", id: "report-time-range")  %>
	<%= submit_tag 'Enter', class: "btn btn-default" %>
	</div>
<% end %>
