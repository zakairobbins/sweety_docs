<h1> Welcome, Sweety</h1>

<% if !flash.empty? %>
<div id="flash">
    <% flash.keys.each do |k| %>
        <div class="<%= k %>">
            <%= flash[k] %>
        </div>
    <% end %>
</div>
<% end %>

<p>Please log in below or <%= link_to 'sign up', new_user_path %></p>

<%= form_for :session, url: sessions_path do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.submit class: 'button', value: 'Sign in' %>
    </p>
  <% end %>
